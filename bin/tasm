#!/usr/bin/env ruby

require "tasm/interpreter"
require "tasm/compiler/factory"

if ARGV.length < 2
  puts "Usage: tasm <COMMAND> [ARGS]"
  puts "  COMMANDS"
  puts "  run <FILE> - run the program in an emulated stack"
  puts "  build <TARGET> <FILE> - compile/transpile program"
  puts "    TARGETS"
  puts "      node - node JS"
  puts "      amd64 - x86_64 assembly"
  puts "      lua - lua"
  exit 1
else
  command = ARGV[0]

  if command == "run"
    source = File.open(ARGV[1], "r").read
    interpreter = Interpreter.new
    interpreter.run(source, ARGV[1])
  elsif command == "build"
    compiler = ARGV[1]
    source = File.open(ARGV[2], "r").read
    compiler = CompilerFactory.new.from_str(compiler)
    compiler.compile(source, "output", ARGV[2])
  else
    puts "No such command '#{command}'"
  end
end
